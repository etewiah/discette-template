<div class="topic-details">

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 style="">{{ model.title }}
            <small class="pull-right topic-source-url"><a target="_blank" {{bind-attr href=topicUrl }} >
        source url</a> </small>
      </h4>

    </div>
    <ul class="list-group">
      {{#each item in model.post_stream.posts }}
      <li class="list-group-item">
        {{{ item.cooked }}}
      </li>
      {{/each}}
    </ul>

  </div>



  <div class="container posts">

    <div class="row">
      <section class="topic-area" id='topic' data-topic-id='{{unbound id}}'>
        <div class='posts-wrapper'>

          {{#each item in model.post_stream.posts }}

            {{post-details post=item }}

          {{/each}}


        </div>
    </div>
  </div>


</div>
