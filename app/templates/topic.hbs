<div class="topic-details">

  <h1 style="">{{ model.title }}
  </h1>

  <div class="container posts">

    <div class="row">
      <section class="topic-area" id='topic' data-topic-id='{{unbound id}}'>
        <div class='posts-wrapper'>

          {{#each item in model.post_stream.posts }}
            {{post-details post=item }}
          {{/each}}

        </div>
    </div>
  </div>

  <div class="container">
    

    {{#if controller.isEditing}}
    <div class="row reply-row">
      <div class='col-md-1'>
        <h3>Your reply:</h3>
      </div>
      <div class='col-md-10'>
    <div class="pagedown-container bottom-round">
      {{pagedown-bootstrap height=200 btnSize=bs-sm content=model.draft focus=true }}
    </div>
        
      </div>
    </div>
    <div class="row">
      <button class='btn btn-primary pull-right' style="" {{action 'processReplyToTopic' }} title="">
        <i class="fa fa-plus"></i>Save
      </button>
    </div>
    {{else}}
        <div class="row">
          <button class='btn btn-primary pull-right' style="" {{action 'startReplyToTopic' }} title="">
            <i class="fa fa-plus"></i>Reply
          </button>
        </div>
    {{/if}}
  </div>


</div>
