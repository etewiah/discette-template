<div>
  <div class="row" style="">
    <div class="" style="">
      <ul class="nav nav-tabs site-nav-tabs" style="">
        <li class="active">
          {{#link-to 'discourse-sites.site' currentSite.slug }} Conversations {{/link-to}}
        </li>
        <li class="">
          {{#link-to 'discourse-sites.site.about' }} About {{/link-to}}
        </li>
      </ul>
    </div>
  </div>

  <div>
    {{#each topic in model.topic_list.topics }}
    <div class="section-topic-line">
      {{#link-to 'discourse-sites.site.topic' currentSite.slug topic.id }}
      <div class="section-topic-row">
        <h3 class="topic-list-title">
            {{ topic.title }}
          <small class="pull-right">
            <span class="badge-posts">{{ topic.views }}  <i class="fa fa-eye"></i></span>
            <span class="badge-posts">{{ topic.posts_count }} <i class="fa fa-comments"></i></span>
            <span class="badge-posts">last post: {{ago topic.last_posted_at }}</span>
          </small>
          </h3>
        <p class="topic-excerpt ">{{{ topic.excerpt }}}</p>

      </div>
      {{/link-to}}
    </div>
    {{/each}}
  </div>
</div>
