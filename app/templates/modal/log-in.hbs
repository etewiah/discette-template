<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button class="close" type="button" {{action cancel on="click"}}>x</button>
      <h4 class="modal-title">Log In</h4>
    </div>


<div id='modal-alert'></div>
<div class="modal-body">
    <form id='login-form' method='post'>
      <div>
        <table>
          <tr>
            <td>
              <label for='login-account-name'>Username&nbsp;</label>
            </td>
            <td>
              {{input value=loginName placeholderKey="login.email_placeholder" id="login-account-name" autocorrect="off" autocapitalize="off" autofocus="autofocus"}}
            </td>
            <td></td>
          </tr>
          <tr>
            <td>
                <label for='login-account-password'>Password&nbsp;</label>
            </td>
            <td>
                {{input value=loginPassword type="password" id="login-account-password" maxlength="200" capsLockOn=capsLockOn}} &nbsp;
            </td>
            <td>
              <a id="forgot-password-link" {{action "showForgotPassword"}}></a>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><div {{bind-attr class=":caps-lock-warning capsLockOn::invisible"}}><i class="fa fa-exclamation-triangle"></i> 'login.caps_lock_warning'</div></td>
            <td></td>
          </tr>
        </table>
      </div>
    </form>
  {{authMessage}}
  <div id='login-alert' {{bind-attr class="alertClass"}}>{{alert}}</div>
</div>
<div class="modal-footer">
    <button class="btn btn-large btn-primary"
      {{bind-attr disabled="loginDisabled"}}
      {{action "login"}}>
        <i class="fa fa-unlock"></i>&nbsp;{{loginButtonText}}
    </button>

    {{#if showSignupLink}}
      &nbsp;
      <button class="btn btn-large" id="new-account-link" {{action "createAccount"}}>
        'create_account.title'
      </button>
    {{/if}}

  {{#if authenticate}}
    &nbsp; 'login.authenticating'
  {{/if}}

</div>


  </div>
</div>