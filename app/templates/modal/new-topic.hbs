<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button class="close" type="button" {{action cancel on="click" }}>x</button>
      <h4 class="modal-title">New Topic</h4>
    </div>
    <div id='modal-alert'></div>

    <div class="modal-body">
      <div>
          <form {{action "createNewTopic" on="submit" }}>
            <div style="width: 100%;" class="form-group" >
              <div>
                <div style="" class="">
                  <label for='topic-title'>
                    Title:
                  </label>
                </div>
              </div>
              <div class="input">
                <div style="">
                  {{input placeholder="" value=topicTitle id="topic-title" autofocus="autofocus" class="form-control"}} 
                  {{input-tip validation=titleValidation}}
                </div>
              </div>

              <div class="" style="margin-top: 15px;">
                <div>
                  <label>
                    First Post:
                  </label>
                </div>
              </div>
              <div class="input">
                <div class="">
                  {{pagedown-bootstrap height=200 btnSize=bs-sm content=firstPost focus=true }}
                  {{input-tip validation=firstPostValidation}}
                </div>
              </div>
            </div>
          </form>
      </div>
    </div>

    <div class="modal-footer">
      <button class='btn' {{action 'closeModal' }} style="">
        Cancel
      </button>
      <button class='btn btn-primary' {{action 'createNewTopic' }} title="">
        Save
      </button>
    </div>




  </div>
</div>
