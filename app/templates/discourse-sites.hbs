<div class="row offline-topics">
  <div class="col-md-2 col-sm-3">

  <div class="row">
    <div class="col-md-12">
      <span class='btn' style="" {{action 'showAddSiteModal' }} title="">
        <i class="fa fa-plus"></i>Add Site
      </span>
    </div>
  </div>

    <div class="bs-sidebar hidden-print affix-top" role="complementary">

      <ul class="nav nav-pills nav-stacked">
        {{#each site in model }} {{#link-to 'discourse-sites.site' site.slug tagName="li" class="topic-nav-item" }}
        <a {{bind-attr href="view.href" }}>{{ site.display_name }}</a> {{/link-to}} {{/each}}
      </ul>

    </div>
  </div>
  <div class="col-md-10 col-sm-9" role="main">
    {{ outlet }}
  </div>
</div>


