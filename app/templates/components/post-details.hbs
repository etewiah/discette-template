<article {{bind-attr class=":boxed via_email" id="postElementId" data-post-id="id" data-user-id="user_id" }}>
  <div class='row'>

    <div class='topic-avatar'>

			<div class="contents">
          <a href="/users/Ed_Tee" classnames="trigger-user-card main-avatar" data-user-card="Ed_Tee"><img width="45" height="45"
            {{bind-attr src="avatarUrl" }}             class="avatar" title="Ed_Tee"></a>
      </div>
      <div class="poster-name pull-left">
        {{ post.name post.user_name }}
      </div>

    </div>

    <div class='topic-body'>
      <div class='topic-meta-data'>

        <div class='post-info'>
          <a class='post-date' {{bind-attr href="shareUrl" data-share-url="shareUrl" data-post-number="post_number" }}>
                    </a>
            {{{ post.cooked }}}

        </div>

      </div>
    </div>

  </div>
</article>
